<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>
                Daftar Kontak
            </h2>
            <a href="/contact/add" class="btn btn-primary mb-2">Tambah Data</a>

            <% if (msg.length !==0) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% } %>

                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nama</th>
                                <th scope="col">NoHp</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (contacts.length===0) { %>
                                <tr>
                                    <td colspan="4">data contact masih kosong</td>
                                </tr>
                                <% } %>

                                    <% contacts.forEach((contact,i)=> {
                                        const { nama, nohp }=contact %>
                                        <tr>
                                            <th scope="row">
                                                <%=i+1%>
                                            </th>
                                            <td>
                                                <%= nama %>
                                            </td>
                                            <td>
                                                <%= nohp %>
                                            </td>
                                            <td><a href="/contact/<%=nama%>"
                                                    class="badge rounded-pill bg-success btn">detail <i
                                                        class="bi bi-info-circle"></i></a></td>
                                        </tr>

                                        <% }) %>
                        </tbody>
                    </table>
        </div>
    </div>
</div>